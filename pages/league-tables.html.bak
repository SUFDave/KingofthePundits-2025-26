    .toggle-icon { transition: transform 0.2s; color: var(--color-primary); }
    .stat-toggle[aria-expanded="true"] .toggle-icon { transform: rotate(45deg); }
    .expanded.hidden { display: none; }
    .expanded td { background-color: rgba(0,0,0,0.2); padding: 1rem 1.5rem; }
    .small-list { list-style: none; padding: 0; margin: 0; }
